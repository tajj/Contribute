<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.mapdemo.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@null"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="About This App"
            android:textColor="@color/black" />

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="125dp"
        android:background="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Welcome. This app is for sharing media with a group of people based on location. You can create a group of users and share a map with them, pinning locations to the map and attaching photos and text to those pins. You can also comment on different pins. Enjoy! Created by Alex Madera, Taylor Jean-Jacques and Maya Jeyendran."
                android:textColor="@color/com_facebook_blue" />


            <Button
                android:id="@+id/btnProceed2"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Proceed"
                android:textColor="@color/accent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>