<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img4"
    tools:context="com.example.mapdemo.SelectGroupMembers">

    <TextView
        android:id="@+id/selectGroupheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Group Members:"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@id/selectGroupheader">

        <ListView
            android:id="@+id/usersList"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_below="@id/selectGroupheader"></ListView>

    </LinearLayout>

    <Button
        android:id="@+id/btnToHomeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/accent"
        android:background="@android:color/transparent"
        android:text="Back to Groups" />

</RelativeLayout>
