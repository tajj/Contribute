<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img4"
    tools:context="com.example.mapdemo.HomeGroupActivity">


    <ListView
        android:id="@+id/lvGroupsList"
        android:layout_width="match_parent"
        android:layout_height="455dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </ListView>

    <ImageButton
        android:id="@+id/btnDelete1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/button_grey"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/delete_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/maprefresh"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnDelete1" />

    <Button
        android:id="@+id/tvSecretSeenAds"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_marginEnd="76dp"
        android:layout_alignTop="@+id/btnAdd"
        android:layout_toStartOf="@+id/btnAdd" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvSecretSeenAds"
        android:gravity="center"
        android:text="Your Groups:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_above="@+id/lvGroupsList" />

    <ImageButton
        android:id="@+id/ibProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnAdd"
        android:layout_toStartOf="@+id/btnAdd"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ibprofile" />


</RelativeLayout>