<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.example.mapdemo.HomeGroupActivity">


    <ListView
        android:id="@+id/lvGroupsChatList"
        android:layout_width="match_parent"
        android:layout_height="455dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </ListView>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@color/com_facebook_blue"
        android:textColor="@android:color/white"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:background="#ffffffff"
        app:srcCompat="@drawable/maprefresh"
        android:layout_alignBottom="@+id/btnDelete"
        android:layout_toStartOf="@+id/btnDelete" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lvGroupsChatList"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Your Group Chats"
        android:textColor="@color/twitter_blue"
        android:textSize="20dp" />


</RelativeLayout>